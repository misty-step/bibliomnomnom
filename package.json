{
  "name": "bibliomnomnom",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "lefthook install",
    "tokens:build": "node scripts/build-tokens.mjs",
    "dev": "concurrently \"pnpm:convex:dev\" \"pnpm:next:dev\"",
    "next:dev": "next dev",
    "build": "npx convex deploy --cmd 'next build'",
    "build:local": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "run-p lint typecheck test:coverage build:local",
    "validate:fast": "run-p lint typecheck test",
    "convex:dev": "convex dev",
    "convex:push": "convex dev --once",
    "convex:deploy": "npx convex deploy",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.36.2",
    "@headlessui/react": "^2.2.9",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-three/fiber": "^9.4.2",
    "@tiptap/extension-placeholder": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@types/three": "^0.181.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/blob": "^2.0.0",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.30.0",
    "convex-helpers": "^0.1.107",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.559.0",
    "marked": "^17.0.1",
    "next": "^16.0.8",
    "next-themes": "^0.4.4",
    "pino": "^10.1.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "svix": "^1.82.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.182.0",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/addon-onboarding": "^10.1.4",
    "@storybook/nextjs": "^10.1.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^4.0.13",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "jsdom": "^24.0.0",
    "lefthook": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.4",
    "prettier": "^3.6.2",
    "storybook": "^10.1.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^4.0.13"
  }
}
